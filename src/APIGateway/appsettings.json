{
  "AppName": "APIGateway",
  "ReverseProxy": {
    "Routes": {
      "MandrilAPIRoute": {
        "ClusterId": "MandrilCluster",
        "Match": {
          "Path": "mandril-ms/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "MandrilCluster": {
        "Destinations": {
          "MandrilCluster/destination1": {
            "Address": "http://mandril-ms/"
          }
        }
      }
    }
  },
  "Discovery": {
    "Address": "http://localhost:8500"
  },
  "Logging": {
    "Console": {
      "Enabled": true,
      "MinimumLevel": "Warning"
    },
    "Graylog": {
      "Enabled": false,
      "Host": "localhost",
      "Port": "12201",
      "MinimumLevel": "Warning"
    }
  }
}

